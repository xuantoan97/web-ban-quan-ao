@model CongNgeWeb.Entities.SanPham

@{
    ViewBag.Title = "Sửa thông tin sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sửa thông tin sản phẩm</legend>
        @Html.HiddenFor(model => model.MASP)

        <div class="editor-label">
           Tên Sản Phẩm
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TENSP)
            @Html.ValidationMessageFor(model => model.TENSP)
        </div>

        <div class="editor-label">
          Giá sản phẩm
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GIASP)
            @Html.ValidationMessageFor(model => model.GIASP)
        </div>

        <div class="editor-label">
          Link nơi lưu trữ ảnh
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LINK_ANH)
            @Html.ValidationMessageFor(model => model.LINK_ANH)
        </div>

        <div class="editor-label">
           Mã danh mục
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MADM)
            @Html.ValidationMessageFor(model => model.MADM)
        </div>

        <div class="editor-label">
           Thời Điểm Thêm Vào Hệ Thống
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TDT)
            @Html.ValidationMessageFor(model => model.TDT)
        </div>
     
        <p>
            <input type="submit" value="Hoàn Tất" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "sp")
</div>

