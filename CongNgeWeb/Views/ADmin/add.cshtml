@model CongNgeWeb.Entities.SanPham

@{
    ViewBag.Title = "Thêm Mới Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        
        <legend>điền thông tin sản phẩm</legend>
        <div class="editor-label">
           MÃ Sản Phẩm
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MASP)
            @Html.ValidationMessageFor(model => model.MASP)
        </div>
        <p>@ViewBag.error</p>
        <div class="editor-label">
           Tên Sản Phẩm
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TENSP)
            @Html.ValidationMessageFor(model => model.TENSP)
        </div>

        <div class="editor-label">
         Giá Sản Phẩm
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GIASP)
            @Html.ValidationMessageFor(model => model.GIASP)
        </div>

        <div class="editor-label">
           Link Chứa Ảnh
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LINK_ANH)
            @Html.ValidationMessageFor(model => model.LINK_ANH)
        </div>

        <div class="editor-label">
          Mã Danh Mục
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MADM)
            @Html.ValidationMessageFor(model => model.MADM)
        </div>
        <div class="editor-label">
         Thời Điểm Thêm Vào
        </div>
            <p id="demo"></p>
<script>
    var d = new Date();
    var e = d.getMonth() + 1 + "-" + d.getDate() + "-" + d.getFullYear();
    document.getElementById("demo").innerHTML = e;
</script>
       
        <p>
            <input type="submit" value="Tạo" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "sp")
</div>


