@model CongNgeWeb.Entities.DONHANG

@{
    ViewBag.Title = "Gửi đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Điền thông tin</legend>

        <div class="editor-label">
           Tên Khách Hàng
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TENKH)
            @Html.ValidationMessageFor(model => model.TENKH)
        </div>

        <div class="editor-label">
          Số điện thoại:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SDTKH)
            @Html.ValidationMessageFor(model => model.SDTKH)
        </div>

        <div class="editor-label">
            Địa chỉ Tiếp Nhận
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DCKH)
            @Html.ValidationMessageFor(model => model.DCKH)
        </div>

       
       

        <p>
            <input type="submit" value="Hoàn Tất" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index","Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
