@model PagedList.IPagedList<CongNgeWeb.Entities.SanPham>
@using PagedList.Mvc
@{
    ViewBag.Title = "Giao Diện Người Dùng";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}






@foreach (var item in Model) {    
    
    
  <div class="item  col-xs-3 col-lg-3" > 
   <div class="thumbnail"> <img  class="group list-group-image" src="@Html.DisplayFor(modelItem => item.LINK_ANH)" />
    <div class="caption" > 
     <h6 > <a href="~/Home/detailSP?MASP=@item.MASP">@Html.DisplayFor(modelItem => item.TENSP)</a></h6> 
     <div > 
      <div > 
       <p > Giá: @Html.DisplayFor(modelItem => item.GIASP) VNĐ</p> 
      </div> 
      <div >
          
        <a class="btn btn-success btn-sm" href="~/Shopping/Add?MASP=@item.MASP">
             <span class="glyphicon glyphicon-shopping-cart"></span>  Thêm vào giỏ </a>
      
     </div> 
    </div> 
   </div> 
  </div> 
   </div>
}
<div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                @Html.PagedListPager(Model, PageNum => Url.Action("Index", new { PageNum }))
                            </div>
                        </div>